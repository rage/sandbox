{
  "name": "sandbox-next",
  "version": "0.1.0",
  "description": "TMC Sandbox",
  "author": "Henrik Nygren <nygrenh@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts",
    "serve": "nodemon --ignore uploads --ignore work dist/server.js",
    "production": "npm run build && env NODE_ENV=production node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/compression": "0.0.35",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "async": "^2.1.2",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "morgan": "^1.7.0",
    "multer": "^1.3.0",
    "request": "^2.78.0",
    "tar-fs": "^1.16.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.2",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.39",
    "@types/jest": "^19.2.2",
    "@types/node": "^8.0.54",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.0",
    "concurrently": "^3.4.0",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.4.0"
  }
}
